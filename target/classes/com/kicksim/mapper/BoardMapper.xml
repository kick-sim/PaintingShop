<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.kicksim.mapper.BoardMapper">
 	  <!-- 게시판 등록 -->
    <insert id="enroll">
        
        insert into kicksim_board(title, content, memberId) values (#{title}, #{content}, #{memberId})
        
    </insert>
      <!-- 게시판 목록 -->
    <select id="getList" resultType="com.kicksim.model.BoardVO">
    
        select * from kicksim_board
    
    </select>
    <!-- 게시판 조회 -->
    <select id="getPage" resultType="com.kicksim.model.BoardVO">
    
        select * from kicksim_board where bno = #{bno}
    
    </select>
      <!-- 게시판 수정 -->
    <update id="modify">
        update kicksim_board set title = #{title}, content = #{content}, updatedate = now() where bno = #{bno}
    </update>
    <!-- 게시판 삭제 -->
    <delete id="delete">
    
        delete from kicksim_board where bno = #{bno}
    
    </delete>
   <!-- 게시물 목록(페이징) -->
    <select id="getListPaging" resultType="com.kicksim.model.BoardVO">
    
        select * from (
                select bno, title, memberId, regdate, updatedate  
                from kicksim_board 
                <if test="keyword != null">
                    where title like concat('%',#{keyword},'%' )
                </if>
                order by bno desc) as T1
        limit #{skip},#{amount}
    
    </select>
    <!-- 게시물 총 개숫 -->
    <select id="getTotal" resultType="int">
    
        select count(*) from kicksim_board
        
        <if test="keyword != null">
       
            <!-- MySQL -->
            where title like concat('%',#{keyword},'%')
        
        </if>
    
    </select>
 
 
  </mapper>